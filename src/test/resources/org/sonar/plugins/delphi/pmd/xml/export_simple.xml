<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="delph">
  <description>Sonar Profile: delph</description>
  <rule class="org.sonar.plugins.delphi.pmd.rules.InterfaceNameRule" message="Interface Name doesn't comply with a naming convention" name="InterfaceNameRule" language="delph">
    <priority>1</priority>
    <description>Interface name should begin with "I"</description>
    <properties>
      <property name="baseEffort" value="1min" />
    </properties>
  </rule>
  <rule class="org.sonar.plugins.delphi.pmd.rules.TooManyArgumentsRule" message="Too many arguments" name="TooManyArgumentsRule" language="delph">
    <priority>1</priority>
    <description>Function may have too many arguments, maximum number of arguments is 6</description>
    <properties>
      <property name="baseEffort" value="1h" />
      <property name="limit" value="6" />
    </properties>
  </rule>
  <rule class="org.sonar.plugins.delphi.pmd.rules.TooManyVariablesRule" message="Too many variables" name="TooManyVariablesRule" language="delph">
    <priority>3</priority>
    <description>Function may have too many variables, maximum number of variables is 10</description>
    <properties>
      <property name="baseEffort" value="30min" />
      <property name="limit" value="10" />
    </properties>
  </rule>
</ruleset>

